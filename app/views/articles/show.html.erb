<h1><p>
	Title: <%= @article.title %>
</p></h1>

<h3><p>
	Text: <%= @article.text %>
</p></h3>

<% if @article.comments.any? %>
	<h2>Comments</h2>
	<%= render @article.comments %>
<% end %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Back', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>
